{% extends '@Pimterest/base.html.twig' %}

{% block body %}
    <div class="row" style="margin-top: 15px;">
        <div class="col-sm-8 col-sm-offset-2 text-right">
            <a class="btn btn-sm btn-success" href="{{ url('admin_edit') }}">Add a contribution</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <table class="table table-hover table-condensed">
                <thead>
                <tr>
                    <th style="width: 150px;">Picture</th>
                    <th>Source</th>
                    <th>Usertype</th>
                    <th style="width: 150px;"></th>
                </tr>
                </thead>
                <tbody>
                {% for contribution in pagination %}
                    <tr>
                        <td><img src="{{ contribution.mediaUrl }}" alt="" style="width: 100px;" class="img-thumbnail" /></td>
                        <td><span style="font-size: 12px;" class="text-muted">{{ contribution.source|capitalize }}</span></td>
                        <td><span style="font-size: 12px;" class="text-muted">{{ contribution.userType|capitalize }}</span></td>
                        <td style="text-align: right;">
                            <a class="btn btn-info btn-xs" href="{{ url('admin_edit', {'id': contribution.id}) }}">Edit</a>
                            <a class="btn btn-danger btn-xs" href="{{ url('admin_delete', {'id': contribution.id}) }}" onclick="return confirm('Delete entry?')">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="navigation" style="text-align: center;">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
