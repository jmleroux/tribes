<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}PIM-terrestre{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('components/bootstrap/css/bootstrap.min.css') }}">
    {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" href="{{ asset('bundles/pimterest/css/main.css') }}">
    <link href='https://fonts.googleapis.com/css?family=Dosis' rel='stylesheet' type='text/css'>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <script src="{{ asset('components/jquery/jquery.min.js') }}"></script>
    {% block head_javascripts %}{% endblock %}
</head>
<body class="{% block inline_bodyclass %}{% endblock %}">
<nav class="navbar navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ url('home_index') }}">
                <img src="{{ asset('bundles/pimterest/img/logo-pim-terrestre.png') }}" alt=""/>
            </a>
        </div>
        {% set currentRoute = app.request.attributes.get('_route') %}

        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="{{ ('gallery_index' == currentRoute) ? 'active' : '' }}"><a href="{{ url('gallery_index') }}">Gallery</a></li>
                <li class="{{ ('map_index' == currentRoute) ? 'active' : '' }}"><a href="{{ url('map_index') }}">Map</a></li>
            </ul>
            {% if  'map_index' == currentRoute %}
            <div id="legend" class="pull-right" style="color: white; padding-top: 10px;">
                    <img src="{{ asset('bundles/pimterest/img/marker-customers.png') }}"/>&nbsp;Customers
                &nbsp;
                    <img src="{{ asset('bundles/pimterest/img/marker-partners.png') }}"/>&nbsp;Partners
                &nbsp;
                    <img src="{{ asset('bundles/pimterest/img/marker-collaborators.png') }}"/>&nbsp;Community
            </div>
            {% endif %}
        </div>
    </div>
</nav>
{% block container %}
<div class="container">
    {% block body %}{% endblock %}
</div>
{% endblock %}
<script src="{{ asset('components/underscore/underscore-min.js') }}"></script>
<script src="{{ asset('components/bootstrap/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
{% block inline_javascripts %}{% endblock %}
</body>
</html>
